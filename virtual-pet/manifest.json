{
    "manifest_version": 3,
    "name": "Virtual Pet",
    "version": "1.0",
    "description": "A virtual pet in the browser sidebar.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
  